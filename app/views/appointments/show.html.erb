<div class="jumbotron">
  <h1>Appointment for <%= @appointment.name %></h1>
  <p>
    <strong>Start Time:</strong>
    <%= time(@appointment.start_time) %>
  </p>
  <p>
    <strong>End Time:</strong>
    <%= time(@appointment.end_time) %>
  </p>
  <% if current_user.admin == false %>
  <%= link_to 'Edit Appointment', edit_appointment_path(@appointment), class: 'btn btn-default my-2'%>
  <% end %>
  <%= link_to 'Cancel Appointment', @appointment, method: :delete, data: { confirm: "Are you sure you want to cancel the appointment?"}, class: 'btn btn-default my-2' %>
  <%= link_to 'Go Back', appointments_path, class: 'btn btn-default my-2' %>
</div>

<h3>Comments</h3>
<%= render 'comments/form' %>
<%= render @appointment.comments %>
