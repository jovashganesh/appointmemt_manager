<div class="col-md-10 col-md-offset-3">
<h1>All Appointments Currently Booked</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appointment.each do |appointment| %>
      <tr>
        <div>
          <h1><% link_to appointment.name, appointment %><h1>
        </div>
        <td><%= appointment.name %></td>
        <td><%= time(appointment.start_time) %> &ndash;</td>
        <td><%= time(appointment.end_time) %></td>
        <td><%= link_to 'Show', appointment, class: 'btn btn-default my-2' %> &nbsp</td>
        <td><%= link_to 'Edit', edit_appointment_path(appointment), class: 'btn btn-default my-2' %>&nbsp</td>
        <td><%= link_to 'Delete Appointment', appointment, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default my-2' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Back', appointments_path, class: 'btn btn-default my-2' %>
</div>
