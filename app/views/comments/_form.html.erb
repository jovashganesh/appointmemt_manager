<% # a form for the user to enter text into a textbox and save it to the comment model %>
<%= simple_form_for([@appointment, @comment]) do |f| %>
<%= f.error_notification %>
<%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

<div class="form-inputs">
  <%= f.input :reply, label: false, placeholder: "Add comments here" %>
</div>

<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-default my-2'%>
</div>
<% end %>
<hr>
